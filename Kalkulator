print("kalkultor")
print("1=dodawanie")
print("2=odjmowanie")
print("3=mnożenie")
print("4=dzielenie")
print("5=potgowanie")
a=int(input("podaj a"))
b=int(input("podaj b"))
p=input("podaj działanie")
if p=="1":
    print(a+b)
elif p=="2":
    print(a-b)
elif p=="3":
    print(a*b)
elif p=="4":
    if b!=0:
        print(a/b)
    else:
        print("")
        print("0!")
elif p=="5":
    print(a**b)
